<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/player_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/increase_score_button"
        android:layout_alignBottom="@+id/increase_score_button"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/player_name_label"
        android:layout_toRightOf="@+id/player_name_label"
        android:text="Score"/>

    <Button
        android:id="@+id/decrease_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Minus"/>

    <Button
        android:id="@+id/increase_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        android:layout_alignBaseline="@+id/decrease_score_button"
        android:layout_alignBottom="@+id/decrease_score_button"
        android:layout_toRightOf="@+id/player_score_label"
        android:layout_toEndOf="@+id/player_score_label"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/player_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/player_score_label"
        android:layout_alignBottom="@+id/player_score_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Player Name"/>
</RelativeLayout>